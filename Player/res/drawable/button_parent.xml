<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されたときの定義 -->
    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/gray" />

            <stroke android:width="5dp" android:color="@color/white" />

            <gradient android:angle="0" android:endColor="@color/lime" android:startColor="@color/white" />

            <corners android:radius="15dp" />

            <padding android:bottom="20dp" android:left="20dp" android:right="30dp" android:top="20dp" />

            <size android:height="30dp" android:width="30dp" />
        </shape></item>

    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/white" />

            <gradient android:angle="0" android:endColor="@color/lime" android:startColor="@color/white" />

            <stroke android:width="1dp" android:color="@color/gray" />

            <corners android:radius="15dp" />

            <padding android:bottom="20dp" android:left="20dp" android:right="30dp" android:top="20dp" />

            <size android:height="30dp" android:width="30dp" />
        </shape></item>

</selector>