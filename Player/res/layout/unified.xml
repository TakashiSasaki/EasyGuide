<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewSiblingsAndParents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="1dp"
        android:layout_weight="0"
        android:background="@android:color/white" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="thumbnail"
                android:src="@drawable/unknown"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <fragment
        android:id="@+id/breadcrumbFragment"
        android:name="jp.ac.ehime_u.cite.sasaki.easyguide.player.BreadcrumbFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@android:color/white" />

    <fragment
        android:id="@+id/videoFragment"
        android:name="jp.ac.ehime_u.cite.sasaki.easyguide.player.VideoFragment"
                android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="1dp"
        android:visibility="visible"/>

    <FrameLayout
        android:id="@+id/frameLayoutImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="1dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imageViewClickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/h512w512" />

        <SurfaceView
            android:id="@+id/surfaceViewClickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <fragment
        android:id="@+id/textFragment"
        android:name="jp.ac.ehime_u.cite.sasaki.easyguide.player.TextFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:visibility="visible" />

    <fragment
        android:id="@+id/htmlFragment"
        android:name="jp.ac.ehime_u.cite.sasaki.easyguide.player.HtmlFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:visibility="visible" />

    <fragment
        android:id="@+id/buttonsFragment"
        android:name="jp.ac.ehime_u.cite.sasaki.easyguide.player.ButtonsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:background="@android:color/white" />

</LinearLayout>