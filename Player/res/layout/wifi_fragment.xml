<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonLoadAllAps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APファイル全読み込み" />
        
        <Button
            android:id="@+id/buttonSaveApFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APファイル保存" />

        <Button
            android:id="@+id/buttonDeleteApFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APファイル削除" />

        <Button
            android:id="@+id/buttonDetectAp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AP検出" />

        <Button
            android:id="@+id/buttonRegisterApTemporaliry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AP一時登録" />

        
        <Button
            android:id="@+id/buttonLocateAp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="測位" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewSavedWifiAps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="記録済みの情報" />

        <TextView
            android:id="@+id/textViewWifiAps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="アクセスポイント情報" />

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="正規化距離" />
    </LinearLayout>

</LinearLayout>