<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="top"
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewBuilding"
                android:scaleType="fitXY"
                android:layout_width="295dp"
                android:layout_height="295dp"
                android:layout_margin="5dp"></ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:id="@+id/imageViewFloor"
                android:scaleType="fitXY"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"></ImageView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/relativeLayout1"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageViewRoom"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:layout_width="fill_parent"
                android:layout_margin="5dp"></ImageView>
            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">
                <Button
                    android:text=""
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_rew"
                    android:layout_alignParentLeft="true"></Button>
                <Button
                    android:text=""
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_ff"
                    android:layout_alignParentRight="true"></Button>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:gravity="bottom"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:text="building"
                    android:id="@+id/button4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@android:drawable/ic_menu_myplaces"></Button>
                <Button
                    android:text="floor"
                    android:id="@+id/button3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@android:drawable/ic_menu_myplaces"></Button>
                <Button
                    android:text="room"
                    android:id="@+id/button1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@android:drawable/ic_menu_myplaces"></Button>
            </LinearLayout>
            <ScrollView
                android:layout_width="fill_parent"
                android:id="@+id/scrollView1"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <Button
                        android:text=""
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/ic_menu_compass"></Button>
                    <Button
                        android:text=""
                        android:id="@+id/button2"
                        android:background="@android:drawable/ic_menu_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></Button>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>